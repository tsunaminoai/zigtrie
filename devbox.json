{
  "$schema": "https://raw.githubusercontent.com/jetify-com/devbox/0.10.7/.schema/devbox.schema.json",
  "packages": [
    "zig@0.12.0",
    "zls@latest",
    "watchexec@latest",
  ],
  "shell": {
    "init_hook": [
      "echo 'Welcome to devbox!' > /dev/null",
      "devbox run",
    ],
    "scripts": {
      "test": [
        "clear",
        "zig build test",
      ],
      "test-watch": [
        "watchexec --exts zig devbox run test",
      ],
    },
  },
}
